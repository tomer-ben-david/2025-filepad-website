---
interface Props {
  title: string;
  description?: string;
  ogType?: string;
  ogImage?: string;
  publishedTime?: string;
  author?: string;
}

const {
  title,
  description = "FilePad is a macOS utility for right-click video compression and a lightweight FilePad strip for batch jobs.",
  ogType = "website",
  ogImage = "/og-image.png",
  publishedTime,
  author
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />
    <meta property="og:site_name" content="FilePad" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site)} />

    <!-- Article specific (for blog posts) -->
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {author && <meta property="article:author" content={author} />}

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Work+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "FilePad",
      "applicationCategory": "UtilitiesApplication",
      "operatingSystem": "macOS",
      "description": "Right-click video compression for macOS, plus a lightweight FilePad strip for batch jobs.",
      "url": "https://filepad.app",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD",
        "description": "Free during MVP."
      }
    })} />
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="nav">
                <div class="logo">
                    <a href="/"><h1>FilePad</h1></a>
                </div>
                <nav class="nav-links">
                    <a href="/#features">Features</a>
                    <a href="/#where">Where</a>
                    <a href="/#how-it-works">How it Works</a>
                    <a href="/#screenshots">Screenshots</a>
                    <a href="/#pricing">Pricing</a>
                    <a href="/#download">Download</a>
                    <a href="/#faq">FAQ</a>
                </nav>
            </div>
        </div>
    </header>

    <main>
        <slot />
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-info">
                    <h4>FilePad</h4>
                    <p>Right-click video compression with a lightweight FilePad strip for batching.</p>
                </div>
                <div class="footer-links">
                    <a href="/#features">Features</a>
                    <a href="/#download">Download</a>
                    <a href="/#how-it-works">How it Works</a>
                    <a href="/privacy">Privacy</a>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 FilePad. Free during MVP.</p>
            </div>
        </div>
    </footer>

    <script>
        // Smooth scrolling for navigation links
        document.addEventListener('DOMContentLoaded', function() {
            const navLinks = document.querySelectorAll('a[href^="#"], a[href^="/#"]');
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    const href = this.getAttribute('href');
                    const targetId = href?.startsWith('/#') ? href.substring(1) : href;

                    if (targetId && window.location.pathname === '/') {
                        e.preventDefault();
                        const targetElement = document.querySelector(targetId);

                        if (targetElement) {
                            const headerHeight = document.querySelector('.header')?.offsetHeight || 0;
                            const targetPosition = targetElement.offsetTop - headerHeight - 20;

                            window.scrollTo({
                                top: targetPosition,
                                behavior: 'smooth'
                            });
                        }
                    }
                });
            });

            // Add scroll effect to header
            let lastScrollTop = 0;
            const header = document.querySelector('.header');

            window.addEventListener('scroll', function() {
                const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

                if (header) {
                    if (scrollTop > lastScrollTop && scrollTop > 100) {
                        header.style.transform = 'translateY(-100%)';
                    } else {
                        header.style.transform = 'translateY(0)';
                    }
                }

                lastScrollTop = scrollTop;
            });

            // Add animation to elements on scroll
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);

            const animatedElements = document.querySelectorAll('.quick-action-card, .feature-card, .step, .faq-item, .blog-card');
            animatedElements.forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(el);
            });
        });
    </script>
</body>
</html>

<style is:global>
/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Work Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    line-height: 1.6;
    color: #1f2933;
    background: radial-gradient(circle at top, #fff1e8 0%, #fff8f3 35%, #fdfbf8 70%);
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Header */
.header {
    background: rgba(255, 248, 243, 0.92);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 120, 86, 0.15);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    transition: transform 0.3s ease;
}

.nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
}

.logo h1 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1f2933;
    font-family: 'Space Grotesk', 'Work Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    letter-spacing: -0.02em;
}

.logo a {
    text-decoration: none;
}

.nav-links {
    display: flex;
    gap: 2rem;
}

.nav-links a {
    text-decoration: none;
    color: #5b6472;
    font-weight: 500;
    transition: color 0.2s;
}

.nav-links a:hover {
    color: #ff5d3b;
}

/* Buttons */
.btn {
    display: inline-flex;
    align-items: center;
    padding: 1rem 2rem;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    position: relative;
    overflow: hidden;
}

.btn-primary {
    background: linear-gradient(135deg, #ff6b4a 0%, #ff4d2e 100%);
    color: #ffffff;
    box-shadow: 0 10px 24px rgba(255, 93, 59, 0.3);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 14px 30px rgba(255, 93, 59, 0.35);
}

.btn-secondary {
    background: transparent;
    color: #ff5d3b;
    border: 2px solid rgba(255, 93, 59, 0.25);
}

.btn-secondary:hover {
    background: rgba(255, 93, 59, 0.08);
    border-color: rgba(255, 93, 59, 0.45);
}

.btn-download {
    background: linear-gradient(135deg, #ff6b4a 0%, #ff4d2e 100%);
    color: white;
    width: 100%;
    justify-content: center;
    margin-bottom: 1rem;
}

.btn-download:hover {
    background: linear-gradient(135deg, #ff7a5b 0%, #ff5438 100%);
    transform: translateY(-2px);
    box-shadow: 0 12px 26px rgba(255, 93, 59, 0.3);
}

/* Badge */
.badge {
    background: rgba(255, 93, 59, 0.12);
    color: #b33920;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
}

/* Footer */
.footer {
    background: #201c1b;
    color: white;
    padding: 3rem 0 1rem;
}

.footer-content {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 2rem;
    margin-bottom: 2rem;
}

.footer-info h4 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-family: 'Space Grotesk', 'Work Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.footer-info p {
    color: #d2c7c1;
    line-height: 1.6;
}

.footer-links {
    display: flex;
    gap: 2rem;
}

.footer-links a {
    color: #d2c7c1;
    text-decoration: none;
    transition: color 0.2s;
}

.footer-links a:hover {
    color: white;
}

.footer-bottom {
    border-top: 1px solid rgba(210, 199, 193, 0.2);
    padding-top: 1rem;
    text-align: center;
}

.footer-bottom p {
    color: #d2c7c1;
    font-size: 0.875rem;
}

/* Responsive Design */
@media (max-width: 768px) {
    .footer-content {
        grid-template-columns: 1fr;
        text-align: center;
    }

    .footer-links {
        justify-content: center;
    }

    .nav-links {
        display: none;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 0 15px;
    }
}
</style>
