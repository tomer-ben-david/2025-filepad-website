---
import BaseLayout from '../layouts/BaseLayout.astro';
import termsText from '../content/legal/terms.txt?raw';

const LAST_UPDATED = "January 1, 2026";
const CONTACT_EMAIL = "support@filepad.app";
---

<BaseLayout title="Terms of Service - FilePad">
  <section class="legal-page">
    <div class="container">
      <div class="legal-content">
        <h1>Terms of Service</h1>
        <p class="last-updated">Last updated: {LAST_UPDATED}</p>

        <pre class="legal-pre">{termsText}</pre>

        <h2>Contact</h2>
        <p>
          Questions about these Terms? Email <a href={`mailto:${CONTACT_EMAIL}`}>{CONTACT_EMAIL}</a>.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .legal-page {
    padding: 120px 0 60px;
    min-height: 80vh;
  }

  .legal-content {
    max-width: 860px;
    margin: 0 auto;
  }

  .legal-content h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2933;
    margin-bottom: 0.5rem;
    font-family: 'Space Grotesk', 'Work Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .last-updated {
    color: #6a6f7c;
    font-size: 0.9rem;
    margin-bottom: 2.5rem;
  }

  .legal-content h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2933;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .legal-content p {
    color: #6a6f7c;
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .legal-content a {
    color: #ff5d3b;
    text-decoration: none;
  }

  .legal-content a:hover {
    text-decoration: underline;
  }

  .legal-pre {
    margin-top: 2rem;
    margin-bottom: 2rem;
    padding: 1.25rem;
    background: #fff7f3;
    border: 1px solid rgba(255, 120, 86, 0.2);
    border-radius: 12px;
    white-space: pre-wrap;
    word-break: break-word;
    line-height: 1.6;
    color: #1f2933;
    font-size: 0.95rem;
  }

  @media (max-width: 768px) {
    .legal-page {
      padding: 100px 0 40px;
    }

    .legal-content h1 {
      font-size: 2rem;
    }
  }
</style>
